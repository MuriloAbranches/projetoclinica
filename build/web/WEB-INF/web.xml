<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>acesso</servlet-name>
        <servlet-class>br.com.clinicamedica.controller.AcessoController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>usuario</servlet-name>
        <servlet-class>br.com.clinicamedica.controller.UsuarioController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>acesso</servlet-name>
        <url-pattern>/acesso</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>usuario</servlet-name>
        <url-pattern>/usuario</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <filter>
        <filter-name>AcessoAdministrativoFilter</filter-name>
        <filter-class>br.com.clinicamedica.filter.AcessoAdministrativoFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AcessoAdministrativoFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AcessoLogadoFilter</filter-name>
        <filter-class>br.com.clinicamedica.filter.AcessoLogadoFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AcessoLogadoFilter</filter-name>
        <url-pattern>/adminpages/index.jsp</url-pattern>
    </filter-mapping>
</web-app>
